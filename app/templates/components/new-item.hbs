<form>
  <div class="select-box">
    <select onchange={{action "selectCategory" value="target.value"}}>
      {{#each categories as |categoryChoice|}}
        <option value={{categoryChoice.id}} selected={{eq category categoryChoice}}>{{categoryChoice.name}}</option>
      {{/each}}
    </select>
  </div>
  <div class="form-group">
    <label for="name">Item Name</label>
     {{input value=name id="name"}}
  </div>
  <div class="form-group">
    <label for="imageUrl">Image URL</label>
     {{input value=imageUrl id="imageUrl"}}
  </div>
  <div class="form-group">
    <label for="price">Price</label>
     {{input value=price id="price"}}
  </div>
  <div class="form-group">
    <label for="description">Description</label>
     {{input value=description id="description"}}
  </div>
  <button {{action 'saveItem'}}>Save</button>
</form>
