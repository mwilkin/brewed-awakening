{{#if updateItemForm}}
<h4>Update {{item.name}}</h4>
<div>
  <form>
    <div class="form-group">
      <label for="nameUpdate">name</label>
      {{input value=item.name id="nameUpdate"}}
    </div>
    <div class="form-group">
      <label for="descriptionUpdate">Description</label>
      {{input value=item.description id="descriptionUpdate"}}
    </div>
    <div class="form-group">
      <label for="imageUrlUpdate">Image URL</label>
      {{input value=item.imageUrl id="imageUrlUpdate"}}
    </div>
    <div class="form-group">
      <label for="priceUpdate">Price</label>
      {{input value=item.price id="priceUpdate"}}
    </div>
    <button {{action 'update' item}}>Save</button>
  </form>
</div>
{{else}}
<button {{action 'updateItemForm'}}>Update Item</button>
<button {{action 'delete' item}}>Delete Item</button>
{{/if}}
